<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#6A6767"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/titilliumweb_bold"
            android:textColor="@android:color/black"
            android:text="Blog Title" />

        <TextView
            android:id="@+id/tv_blog_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/titilliumweb_regular"
            android:text="Blog description goes here" />

        <TextView
            android:id="@+id/tv_blog_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:fontFamily="@font/titilliumweb_regular"
            android:textColor="@android:color/darker_gray"
            android:text="April 10, 2025" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Read More >"
            android:fontFamily="@font/titilliumweb_regular"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>
</androidx.cardview.widget.CardView>

